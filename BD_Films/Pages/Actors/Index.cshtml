@page
@model BD_Films.Pages.Actors.IndexModel

@{
    ViewData["Title"] = "Index";
//    Layout = "~/Pages/Shared/_Layout.cshtml";/*1001*/
}

<h1>Actors</h1>

<p>
    <a asp-page="./Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Actor[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor[0].YearBirth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PaginatedActors)//Model.Actor
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearBirth)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-page="./Index" asp-route-page="@(Model.PageIndex - 1)" asp-route-searchName="@Model.searchName" asp-route-yearBirth="@Model.yearBirth">Previous</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link">@Model.PageIndex / @Model.TotalPages</a>
        </li>
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-page="./Index" asp-route-page="@(Model.PageIndex + 1)" asp-route-searchName="@Model.searchName" asp-route-yearBirth="@Model.yearBirth">Next</a>
        </li>
    </ul>
</nav>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}